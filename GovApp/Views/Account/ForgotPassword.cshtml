@model GovApp.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Password dimenticata?";  
}

@section Scripts {
    <script type="text/javascript" src="~/js/account/forgotpassword.js"></script>
}
@section Css{
    <link rel="stylesheet" href="~/css/account/forgotpassword.css" />
}


<div class="container" style="margin-top:140px;margin-left:400px">
    <form method="post" asp-controller="Account" asp-action="forgot">
        <fieldset>
            <div class="form-group row">
                <h3><span style="margin-right:10px;width:770px;vertical-align:bottom" class="badge badge-secondary badge-pill">Inserisci la tua email per ricevere la password temporanea</span></h3>
            </div>
            @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
            {
                <div class="form-group row">
                    <h3><span class="badge badge-danger badge-pill">@Html.ValidationSummary(false, null)</span></h3>
                </div>
            }
            <div class="form-group row">
                <span class="text-center">
                    <i class="fa fa-at bigicon"></i>
                </span>
                <div class="col-md-8">
                    <div class="input-group" data-validate="email">
                        <input type="text" asp-for="Email" maxlength="100" class="form-control" id="email" placeholder="Email" required>
                        <span class="input-group-addon danger"><span class="fa fa-ban bigicon"></span></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <span class="text-center">
                    <i class="fa fa-user bigicon"></i>
                </span>
                <div class="col-md-8">
                    <div class="input-group" data-validate="username">
                        <input type="text" asp-for="UserName" maxlength="100" class="form-control" id="username" placeholder="UserName" required>
                        <span class="input-group-addon danger"><span class="fa fa-ban bigicon"></span></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col text-center" style="margin-left:230px">
                    <button type="submit" id="submitUser" class="btn btn-success btn-sm submit_btn"><i class="fas fa-arrow-alt-circle-right"></i>Conferma</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>


